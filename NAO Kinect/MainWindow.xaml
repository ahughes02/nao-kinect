<Window x:Name="MainWindow1" x:Class="NAO_Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NAO Kinect" Height="600" Width="900" Loaded="MainWindow_Loaded" Unloaded="MainWindow_Unloaded" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="176,31,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="276,31,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="stopButton_Click"/>
        <Image x:Name="Image" HorizontalAlignment="Left" Height="480" Margin="10,56,0,0" VerticalAlignment="Top" Width="640"/>
        <Label x:Name="gestureLabel" Content="Start or Stop Motion Detection" HorizontalAlignment="Left" Margin="177,6,0,0" VerticalAlignment="Top" Width="175" Height="25"/>
        <TextBlock x:Name="debug1" HorizontalAlignment="Left" Height="386" Margin="661,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
        <Label x:Name="Debug_Label" Content="Debug Output" HorizontalAlignment="Left" Height="27" Margin="661,4,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBlock x:Name="debug2" HorizontalAlignment="Left" Height="114" Margin="661,422,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
        <TextBox x:Name="ipBox" HorizontalAlignment="Left" Height="19" Margin="10,32,0,0" TextWrapping="Wrap" Text="69.88.163.51" VerticalAlignment="Top" Width="100"/>
        <Label Content="NAO IP:" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="angleSlider" HorizontalAlignment="Left" Margin="398,32,0,0" VerticalAlignment="Top" Width="252" SmallChange="1" Maximum="27" Minimum="-27" ValueChanged="angleSlider_ValueChanged"/>
        <Label Content="Kinect Angle" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
